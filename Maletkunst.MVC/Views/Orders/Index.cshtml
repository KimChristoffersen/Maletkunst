@model Maletkunst.DAL.Models.Order;

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div>
	<h4>Order</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OrderNumber)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.OrderNumber)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.OrderDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.OrderDate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Status)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Status)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Total)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Total)
		</dd>
		<div>
			<h4>Order Lines</h4>
			<hr />
			@foreach (var orderLine in Model.OrderLines)
			{
				<dl class="row">
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => orderLine.Painting.Stock)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => orderLine.Painting.Stock)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => orderLine.Painting.Id)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => orderLine.Painting.Id)
					</dd>
					<dt class="col-sm-2">
						@Html.DisplayNameFor(model => orderLine.Painting.Price)
					</dt>
					<dd class="col-sm-10">
						@Html.DisplayFor(model => orderLine.Painting.Price)
					</dd>
				</dl>
			}
		</div>

	</dl>
</div>
<div>
	<a asp-action="Index" asp-controller="Home">Tilbage</a>
</div>

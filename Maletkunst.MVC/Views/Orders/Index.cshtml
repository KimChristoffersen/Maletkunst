@model Maletkunst.DAL.Models.Order;

@if (Model.OrderNumber == 0)
{
    <p>Beklager, billedet er solgt til anden side.</p>
}
else
{
    <h1>Index</h1>
    <div>
        <h4>Order</h4>
        
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.OrderDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.OrderDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Total)
            </dd>

            <h4>Order Lines</h4>
            @foreach (var orderLine in Model.OrderLines)
            {
                
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => orderLine.Painting.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => orderLine.Painting.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => orderLine.Painting.Stock)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => orderLine.Painting.Stock)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => orderLine.Painting.Id)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => orderLine.Painting.Id)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => orderLine.Painting.Price)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => orderLine.Painting.Price)
                    </dd>
   
            }


        </dl>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Home">Tilbage</a>
    </div>
}
